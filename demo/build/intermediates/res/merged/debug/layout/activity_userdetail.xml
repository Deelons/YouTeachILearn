<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userdetail_returnTv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#f8f8f8"
            android:drawableLeft="@drawable/ic_return"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="返回"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F8F8"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="详细资料"
            android:textColor="#000" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/di_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#2dcccc">

        <com.netease.nim.demo.main.RoundImageView
            android:id="@+id/userdetail_portraitIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_miya" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userdetail_nameTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="miya"
                android:textColor="#111" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/search_edttxt_style"
                android:text="钢琴6级，喜欢吉他"
                android:textColor="#afafaf" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/di_lightgray" />

    <ListView
        android:id="@+id/userdetail_userinfoLv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fff"
        android:divider="#bbb"
        android:dividerHeight="1dp"></ListView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/di_lightgray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#aaaaaa"
        android:gravity="center_vertical"
        android:text="课程"
        android:textColor="#000" />

    <ListView
        android:id="@+id/userdetail_lessoninfoLv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fff"
        android:divider="#bbb"
        android:dividerHeight="1dp"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#f8f8f8">

        <Button
            android:id="@+id/userdetail_sendmsgBtn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sendmsgbtn_style"
            android:gravity="center"
            android:text="发消息"
            android:textColor="#000" />
    </LinearLayout>


</LinearLayout><!-- From: file:/D:/nim_demo/demo/res/layout/activity_userdetail.xml -->